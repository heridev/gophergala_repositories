button(bg-color = $blue, text-color = white)
  background bg-color
  border 2px solid text-color
  border-radius 6px
  color text-color
  cursor pointer
  font-family 'Montserrat', sans-serif
  font-weight bold
  padding remify(12) remify(24)
  text-align center
  text-decoration none
  text-transform uppercase
  transition color .5s, background .5s

  &:hover
    background text-color
    border 2px solid bg-color
    color bg-color
  &:active
    background bg-color
    border 2px solid text-color
    color text-color

  &:disabled
    background darken(bg-color, 10%)
    border 2px solid text-color
    color text-color
    opacity .4

input:disabled
  opacity .4
